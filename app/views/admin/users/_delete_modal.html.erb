<div id="modal-delete" class="modal">
  <div class="modal-content">
    <%= form_tag('', id: 'form-delete') do |f| %>
      <input type="hidden" name="_method" value="delete" />
      <div class="row">
        <p>Are you sure?</p>
      </div>
      <div class="row">
        <div class="col s6">
          <%= link_to 'Cancel', {}, onclick: "$('#modal-delete').closeModal(); return false;", class: 'btn cyan waves-effect waves-light' %>
        </div>
        <div class="col s6">
          <%= link_to 'Delete', {}, onclick: "$(this).parents('form').submit(); return false;", class: 'btn cyan waves-effect waves-light' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
